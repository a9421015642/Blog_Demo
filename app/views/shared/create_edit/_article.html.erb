<div class="well col-md-12">
  <%= form_for @article do |f| %>

    <div class="form-group">
      <%= f.label "分類" %>
      <br>
         <%=  collection_select(:article, :category_id, Category.all, :id, :title, prompt: true) %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <br>
      <%= f.text_area :content, rows: 15  ,cols: 100 %>
    </div>
  <br>
    <%= f.submit(@article.new_record? ? '新增文章' : '編輯文章', class: 'btn btn-primary pull-right ') %>
  <% end %>
</div>