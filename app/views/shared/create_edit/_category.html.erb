<div class="well col-md-12">
  <%= form_for @category do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
  <br>
    <%= link_to '分類總覽', categories_path , class: 'btn btn-primary pull-left ' %>
    <%= f.submit(@category.new_record? ? '新增分類' : '編輯分類', class: 'btn btn-primary pull-right ') %>
  <% end %>
</div>